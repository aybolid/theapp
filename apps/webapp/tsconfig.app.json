{
  "extends": "@theapp/typescript-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client", "bun-types"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@theapp/webapp/*": ["./src/*"],
      "@theapp/server/*": ["../server/src/*"],
      "@theapp/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src"]
}
